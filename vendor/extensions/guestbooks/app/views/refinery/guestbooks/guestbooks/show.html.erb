<% content_for :body_content_title do %>
  <%= @guestbook.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @guestbook.name %>
    </p>
  </section>
  <section>
    <h1>Message</h1>
    <p>
      <%=raw @guestbook.message %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="guestbooks">
      <% @guestbooks.each do |guestbook| %>
        <li>
          <%= link_to guestbook.name, refinery.guestbooks_guestbook_path(guestbook) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
