<% content_for :body_content_title do %>
  <%= @reservation.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @reservation.name %>
    </p>
  </section>
  <section>
    <h1>Sirname</h1>
    <p>
      <%=raw @reservation.sirname %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @reservation.address %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @reservation.city %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @reservation.email %>
    </p>
  </section>
  <section>
    <h1>Phonenumber</h1>
    <p>
      <%=raw @reservation.phonenumber %>
    </p>
  </section>
  <section>
    <h1>Startdate</h1>
    <p>
      <%=raw @reservation.startdate %>
    </p>
  </section>
  <section>
    <h1>Enddate</h1>
    <p>
      <%=raw @reservation.enddate %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="reservations">
      <% @reservations.each do |reservation| %>
        <li>
          <%= link_to reservation.name, refinery.reservations_reservation_path(reservation) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
