<ul>
  <% if ::Refinery::Reservations::Admin::ReservationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.reservations_admin_reservations_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_reservations_admin_reservation_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Reservations::Admin::ReservationsController.sortable? && ::Refinery::Reservations::Reservation.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Reservations"),
                 refinery.reservations_admin_reservations_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Reservations"),
                 refinery.reservations_admin_reservations_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
