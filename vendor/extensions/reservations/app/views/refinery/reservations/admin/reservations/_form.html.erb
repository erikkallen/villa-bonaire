<%= form_for [refinery, :reservations_admin, @reservation] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @reservation,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :sirname -%>
    <%= f.text_field :sirname  -%>

  </div>
  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address  -%>

  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>

  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>

  </div>
  
  <div class='field'>
    <%= f.label :phonenumber -%>
    <%= f.text_field :phonenumber  -%>

  </div>
  
  <div class='field'>
    <%= f.label :startdate -%>
    <%= f.date_select :startdate  -%>

  </div>
  
  <div class='field'>
    <%= f.label :enddate -%>
    <%= f.date_select :enddate  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.reservations.admin.reservations.reservation'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @reservation.name) %>
<% end -%>
