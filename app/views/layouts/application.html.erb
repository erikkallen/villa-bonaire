<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <%= render '/refinery/head' %>
  <body>
    <div class="slideshow">
      <!-- preload images -->
<%= image_tag 'bg01.jpg', class: '' %>
<%= image_tag 'bg02.jpg', class: '' %>
<%= image_tag 'bg03.jpg', class: '' %>
    </div>
    <%#= site_bar -%>
    <%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>


<div class="container">
    <div class="header">     
      <%= render '/refinery/header' -%>
    </div>
    <div class="content">
      <% if flash[:notice] %>
      <div id="the_flash">
        <%= flash[:notice] %><%= render :partial => 'shared/blind_effect' %>
      </div>
      <% end %>
      <% if flash[:error] %>
        <div id="the_flash" >
          <div class="error">
            <%= flash[:error] %><%= render :partial => 'shared/blind_effect' %>
          </div>
        </div>
      <% end %>
